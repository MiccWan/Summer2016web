<% include ../partials/header.ejs %>
<% var sum1 = 0, sum2 = 0 %>
<% user.rank.python.forEach(function(p) { %>
	<% if (p) { %>
		<% sum1 += p %>	
	<% } %>
<% }) %>
<% user.rank.cpp.forEach(function(p) { %>
	<% if (p) { %>
		<% sum2 += p %>	
	<% } %>
	
<% }) %>
<% var sum = sum1 + sum2  %>
<h1><%= user.username %> - <%= sum %></h1>

<h2>Python</h2>
<table style=" width:60%;transform:translateX(50px);;height:40%" >
<tr>
	<th>Problem No.</th>
	<th>Status</th>
</tr>
	<% for (var i = 0; i < pyCnt; i++) { %>
	<tr>
		<% if (user.judges.python[i]) { %>
			<td><%= i + 1 %></a></td>
			<td><%= user.judges.python[i] %></td>
		<% } else {%>
			<td><%= i + 1 %></td>
			<td>N/A</td>
		<% } %>	
	</tr>
	
<% } %>	
</table>

<h2>C++</h2>
<table style=" width:60%;transform:translateX(50px);;height:40%" >
<tr>
	<th>Problem No.</th>
	<th>Status</th>
</tr>
	<% for (var i = 0; i < cppCnt; i++) { %>
	<tr>
		<% if (user.judges.cpp[i]) { %>
			<td><%= i + 1 %></a></td>
			<td><%= user.judges.cpp[i] %></td>
		<% } else {%>
			<td><%= i + 1 %></td>
			<td>N/A</td>
		<% } %>	
	</tr>
	
<% } %>	
</table>

<% include ../partials/footer.ejs %>