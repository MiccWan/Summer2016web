<% include ../partials/header.ejs %>
<% var sum1 = 0, sum2 = 0 %>
<% user.rank.python.forEach(function(p) { %>
	<% if (p) { %>
		<% sum1 += p %>	
	<% } %>
<% }) %>
<% user.rank.cpp.forEach(function(p) { %>
	<% if (p) { %>
		<% sum2 += p %>	
	<% } %>
	
<% }) %>
<% var sum = sum1 + sum2  %>
<h1><%= user.nickname %> - <%= sum %></h1>

<h2>Python</h2>
<table style=" width:60%;transform:translateX(50px);;height:40%" >
<tr>
	<th>Problem No.</th>
	<th>Status</th>
	<th>Score</th>
</tr>
	<% for (var i = 0; i < pyCnt; i++) { %>
	<tr>
		<% if (user.judges.python[i]) { %>
			<% var a = py[i] %>

			<td><a href="/class/python/judge/<%=a%>">py.<%= i + 1 %></a></a></td>
			<td><%= user.judges.python[i] %></td>
			<td><%= user.rank.python[i] %></td>
		<% } else {%>
		<% var a = py[i] %>
			
			<td><a href="/class/python/judge/<%=a%>">py.<%= i + 1 %></a></a></td>
			<td>N/A</td>
			<td>0</td>
		<% } %>	
	</tr>
	
<% } %>	
</table>

<h2>C++</h2>
<table style=" width:60%;transform:translateX(50px);;height:40%" >
<tr>
	<th>Problem No.</th>
	<th>Status</th>
	<th>Score</th>
</tr>
	<% for (var i = 0; i < cppCnt; i++) { %>
	<tr>
		<% if (user.judges.cpp[i]) { %>
		<% var b = cpp[i] %>
			
			<td><a href="/class/cpp/judge/<%=b%>">c.<%= i + 1 %></a></a></td>
			<td><%= user.judges.cpp[i] %></td>
			<td><%= user.rank.python[i] %></td>
		<% } else {%>
		<% var b = cpp[i] %>
			
			<td><a href="/class/cpp/judge/<%=b%>">c.<%= i + 1 %></a></a></td>
			<td>N/A</td>
			<td>0</td>
		<% } %>	
	</tr>
	
<% } %>	
</table>

<% include ../partials/footer.ejs %>
