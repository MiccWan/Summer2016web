<% include partials/header.ejs %>
<div id="wrapper">

	<!-- Header -->
		<header id="header">
			<div class="inner">

				<!-- Logo -->
					<a href="http://summer2016.infor.org" class="logo">
						<span class="symbol"><img src="images/logo.svg" alt="" /></span><span class="title">INFOR x ZSISC</span>
					</a>

				<!-- Nav -->
					<nav>
						<ul>
							<li><a href="#menu">Menu</a></li>
						</ul>
					</nav>

			</div>
		</header>

	<!-- Menu -->
		<nav id="menu">
			<h2><%= inforClass.name %></h2>
			<ul>
				<li><a href="/">Home</a></li>
				<li><a href="generic.html">Book</a></li>
				<li><a href="/<%= inforClass.name %>/note">Notes</a></li>
				<li><a href="generic.html">Resources</a></li>
				<li><a href="/profile">Profile</a></li>
			</ul>
		</nav>

	<!-- Main -->
		<div id="main">
			<div class="inner">
				<h1>Notes</h1>

				<!-- Text -->
					<section>
					<% inforClass.notes.forEach(function(note) { %>
						<pre><code><%= note.content %></code></pre>
						<em><%= note.create.toDateString() %></em>
						<button><a href="/<%= inforClass.name %>/note/<%= note._id %>/edit">Edit</a></button>
						<form action='/<%= inforClass.name %>/note/<%= note._id %>?_method=delete' method='POST' class='deleteForm'>
							<button>Delete</button>
						</form>
					<% }) %>
					</section>
			</div>
		</div>

	<!-- Footer -->
		<footer id="footer">
			<div class="inner">
				<section>
					<h2>Get in touch</h2>
					<form method="post" action="#">
						<div class="field half first">
							<input type="text" name="name" id="name" placeholder="Name" />
						</div>
						<div class="field half">
							<input type="email" name="email" id="email" placeholder="Email" />
						</div>
						<div class="field">
							<textarea name="message" id="message" placeholder="Message"></textarea>
						</div>
						<ul class="actions">
							<li><input type="submit" value="Send" class="special" /></li>
						</ul>
					</form>
				</section>
				<section>
					<h2>Follow</h2>
					<ul class="icons">
						<li><a href="#" class="icon style2 fa-twitter"><span class="label">Twitter</span></a></li>
						<li><a href="#" class="icon style2 fa-facebook"><span class="label">Facebook</span></a></li>
						<li><a href="#" class="icon style2 fa-instagram"><span class="label">Instagram</span></a></li>
						<li><a href="#" class="icon style2 fa-dribbble"><span class="label">Dribbble</span></a></li>
						<li><a href="#" class="icon style2 fa-github"><span class="label">GitHub</span></a></li>
						<li><a href="#" class="icon style2 fa-500px"><span class="label">500px</span></a></li>
						<li><a href="#" class="icon style2 fa-phone"><span class="label">Phone</span></a></li>
						<li><a href="#" class="icon style2 fa-envelope-o"><span class="label">Email</span></a></li>
					</ul>
				</section>
				<ul class="copyright">
					<li>&copy; Untitled. All rights reserved</li><li>Design: <a href="http://html5up.net">HTML5 UP</a></li>
				</ul>
			</div>
		</footer>

</div>
<% include partials/footer.ejs %>