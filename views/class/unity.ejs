using UnityEngine;

public class pick_up: MonoBehavior {
	private int count;//先宣告一個數來數消除的方塊數量

	void Start(){
	 count = 0;//一開始設為0
	}
	void Update(){

	}
	void OnTriggerEnter(Collider other)//若觸碰到其他Trigger
	{
		if(other.gameObject.CompareTag("pick_up"))//若其Tag為pick_up
		{
