using UnityEngine;
using UnityEngine.UI;//先引入UI

public class pick_up : MonoBehavior{
	private int count;

	public Text countText;//宣告一個Text叫做countText
	public Text winText;//宣告一個Text叫做winText
	
	void Start(){
		count = 0;
		countText.test = count.ToString() + "/4";//遊戲開始先把countText自設為數量/4
		winText.text = "";//遊戲開始時winText沒有字
	}
	void Update(){

	}
	void OnTriggerEnter(Collider other)
	{
		if(other.gameObject.CompareTag("pick_up"))
		{
			other.gameObject.SetActive(false);
			count++;
			countText.text = count.ToString() + "/4";//每碰到一次就更改countText的內容
			if(count >= 4)
			{
				winText.text = "You win!!";//當得到4個以上時winText的內容將會改成You win!!
			}
		}
	}
}
